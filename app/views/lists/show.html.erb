<div class="movie-container">

  <h2>
     <%= @list.name %>
  </h2>

  <div class="movies">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="carte">
          <div class="card-img">
            <img src="<%= bookmark.movie.poster_url %>" >
          </div>
          <div class="card-content">
            <%= bookmark.movie.title %>
            <%= bookmark.movie.overview %>
          </div>
        <div class="btn">
          <%= link_to '🗑️', bookmark_path(bookmark), method: :delete, data: { confirm: 'Are u sure ?' } %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="add-bookmark">
    <h3>Ajoute un bookmark</h3>
    <%= render 'bookmarks/form_bookmark', bookmark: @bookmark %>
    <%= link_to 'Retour', lists_path %>
  </div>


</div>
